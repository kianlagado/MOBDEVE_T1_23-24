<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#A2A9AA">

    <!-- ImageView for the Anime/Manga cover -->
    <ImageView
        android:id="@+id/search_item_image"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />  <!-- Placeholder image -->

    <!-- TextView for the Anime/Manga title -->
    <TextView
        android:id="@+id/search_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/search_item_image"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:text="Anime/Manga Title"
        android:textColor="#6E8D71"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- TextView for the rating -->
    <TextView
        android:id="@+id/search_item_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Rating: 4.5/5"
        android:textColor="#E5D5BA"
        android:textSize="14sp" />
</RelativeLayout>