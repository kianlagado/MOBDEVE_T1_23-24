<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC">

    <!-- Sticky Header -->
    <RelativeLayout
        android:id="@+id/detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A2A9AA"
        android:padding="16dp">

        <!-- Exit/Back Button -->
        <ImageButton
            android:id="@+id/exit_edit_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#5E758D" />

        <!-- Anime/Manga Title -->
        <TextView
            android:id="@+id/entry_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Spy x Family"
            android:textColor="#5E758D"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Add to Library ImageButton -->
        <ImageButton
            android:id="@+id/remove_entry_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_add_library"
            app:tint="#5E758D" />

    </RelativeLayout>

    <!-- Content Area inside a ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/detail_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Anime/Manga Image -->
            <ImageView
                android:id="@+id/entry_image"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:src="@drawable/spyxfam"
                android:scaleType="fitCenter" />

            <!-- Rating -->
            <TextView
                android:id="@+id/tv_detail_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Rating: 8.5/10"
                android:textColor="#5E758D"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Synopsis Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Synopsis"
                android:textColor="#5E758D"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Synopsis Content -->
            <TextView
                android:id="@+id/tv_synopsis_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Anya, Loid, Yor, Bond"
                android:textColor="#5E758D"
                android:textSize="20sp" />

            <!-- Additional contents like Number of Episodes, Release Year, and Genre Tags can be added here -->
            <!-- Genres -->
            <TextView
                android:id="@+id/tv_genres_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_synopsis"
                android:layout_marginTop="16dp"
                android:text="Genres"
                android:textColor="#5E758D"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_genres_header"
                android:layout_marginTop="8dp"
                android:text="Action, Comedy, Slice of Life, Supernatural"
                android:textColor="#5E758D"
                android:textSize="20sp" />

            <!-- Episodes/Chapters -->
            <TextView
                android:id="@+id/tv_episodes_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_genres"
                android:layout_marginTop="16dp"
                android:text="Episodes"
                android:textColor="#5E758D"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_episodes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_episodes_header"
                android:layout_marginTop="8dp"
                android:text="12"
                android:textColor="#5E758D"
                android:textSize="20sp" />

            <!-- Airing/Release Date -->
            <TextView
                android:id="@+id/tv_airing_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_episodes"
                android:layout_marginTop="16dp"
                android:text="Aired On"
                android:textColor="#5E758D"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_airing_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_airing_header"
                android:layout_marginTop="8dp"
                android:text="April 9, 2022"
                android:textColor="#5E758D"
                android:textSize="20sp" />

            <!-- Studio/Author -->
            <TextView
                android:id="@+id/tv_studio_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_airing_date"
                android:layout_marginTop="16dp"
                android:text="Studio"
                android:textColor="#5E758D"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_studio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_studio_header"
                android:layout_marginTop="8dp"
                android:text="Enter Studio Here"
                android:textColor="#5E758D"
                android:textSize="20sp" />

            <!-- Status -->
            <TextView
                android:id="@+id/tv_status_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_studio"
                android:layout_marginTop="16dp"
                android:text="Status"
                android:textColor="#5E758D"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_status_header"
                android:layout_marginTop="8dp"
                android:text="Finished Airing"
                android:textColor="#5E758D"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
