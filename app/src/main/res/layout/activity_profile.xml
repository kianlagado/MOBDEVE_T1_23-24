<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2A9AA"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Close Button (X) -->
        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:backgroundTint="@color/black"
            android:contentDescription="Exit Activity"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <!-- Header: Filter & Sort -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="Profile"
            android:textColor="#6E8D71"
            android:textSize="24sp" />

        <!-- Filter Section -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_library"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginBottom="12dp"
            android:background="#6E8D71"
            android:text="Personal Library"
            android:textColor="#E5D5BA" />

        <TextView
            android:id="@+id/text_needhelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:text="Need some help?"
            android:textColor="#6E8D71"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">

            <TextView
                android:id="@+id/text_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:text="Contact us through:"
                android:textColor="#E5D5BA"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contact_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:text="mobdeve@gmail.com"
                    android:textColor="#E5D5BA"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:text="About the app:"
            android:textColor="#6E8D71"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">

            <TextView
                android:id="@+id/text_appver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:text="App Version: Beta 1.0.0"
                android:textColor="#E5D5BA"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_devs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:text="Created by:"
                android:textColor="#E5D5BA"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_abelgas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:text="Kevin Abelgas"
                    android:textColor="#E5D5BA"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_lagado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:text="Kian Lagado"
                    android:textColor="#E5D5BA"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_llamado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:text="Jon Llamado"
                    android:textColor="#E5D5BA"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Example Filter: Genres Dropdown -->
        <!-- Additional filters can be added in a similar manner -->

        <!-- Sort Section -->

        <!-- Example Sort: Radio Buttons -->
        <!-- Additional sorting options can be added in a similar manner -->

        <!-- Apply Button -->

        <!-- Reset Button -->

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>